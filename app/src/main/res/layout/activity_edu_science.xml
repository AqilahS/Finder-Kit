        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/eduSciencetextView2"
        android:layout_width="408dp"
        android:layout_height="411dp"
        android:background="#fff2df"
        android:text="@string/EduScience"
